                </select>
                <br>
                <br>
                <label for="minyak" name="periode" id="">Pilih Merek Minyak</label>
                <select id="minyak" name="minyakgor">
                    <option value="null"> Silahkan pilih ...</option>
                    <%for (const minyakgor of minyak) {%>
                        <option value="<%=minyakgor.id_migor %>"><%= minyakgor.nama_minyak %> Rp.<%= minyakgor.harga %></option>
                    <%}%>
                </select>
                <br>
                <label for="liter">Pilih berapa liter</label>
                <input id="liter" type="number" class="inputminyak" name="quantity" min="0" max="5" value="0">
                <a class="ref" href="pembayaran">
                    <input type="submit" value="Selesai">
                </a>
            </form>
    </div>
</body>
</html>